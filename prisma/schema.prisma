generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  userId      String   @unique
  password    String
  name        String
  phoneNumber String
  role        Role
  Admin       Admin?
  Guru        Guru?
  Murid       Murid?
  createdAt   DateTime
  updatedAt   DateTime

  @@map("users")
}

model Admin {
  id      Int     @id @default(autoincrement())
  photo   String?
  adminId Int     @unique
  user    User    @relation(fields: [adminId], references: [id])

  @@map("admins")
}

model Guru {
  id     Int      @id @default(autoincrement())
  guruId Int      @unique
  photo  String?
  user   User     @relation(fields: [guruId], references: [id])
  materi Materi[]
  soal   Soal[]

  @@map("gurus")
}

model Murid {
  id          Int       @id @default(autoincrement())
  muridId     Int       @unique
  photo       String?
  user        User      @relation(fields: [muridId], references: [id])
  gayaBelajar String?
  jawaban     Jawaban[]

  @@map("murids")
}

model Materi {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  videoUrl  String
  guruId    Int
  guru      Guru     @relation(fields: [guruId], references: [id])
  soals     Soal[]
  createdAt DateTime
  updatedAt DateTime

  @@map("materis")
}

model Soal {
  id       Int       @id @default(autoincrement())
  question String
  answer   String
  guruId   Int
  materiId Int
  guru     Guru      @relation(fields: [guruId], references: [id])
  materi   Materi    @relation(fields: [materiId], references: [id])
  options  Option[]
  jawaban  Jawaban[]

  @@map("soals")
}

model Option {
  id     Int    @id @default(autoincrement())
  text   String
  soalId Int
  soal   Soal   @relation(fields: [soalId], references: [id])

  @@map("options")
}

model Jawaban {
  id      Int    @id @default(autoincrement())
  soalId  Int
  muridId Int
  jawaban String
  soal    Soal   @relation(fields: [soalId], references: [id])
  murid   Murid  @relation(fields: [muridId], references: [id])

  @@map("jawabans")
}

enum Role {
  ADMIN
  GURU
  MURID
}
